# Core
aws_region    = "eu-west-1"
project_name  = "honeypot-lab"
instance_type = "t3.micro"

# Optional SSH key for EC2 instances
key_name = ""

# Detection / response controls
block_threshold            = 7
allowlist_ips              = []
auto_block_enabled         = true
max_ipset_size             = 5000
waf_update_max_retries     = 4

# Logging
honeypot_log_group_retention_days = 14
